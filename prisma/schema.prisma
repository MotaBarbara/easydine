generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Restaurant {
  id           String        @id @default(uuid())
  name         String
  logo         String?
  primaryColor String?
  settings     Json?
  reservations Reservation[]
  users        User[]
  createdAt    DateTime      @default(now()) @map("created_at")
}

model Reservation {
  id            String   @id @default(uuid())
  restaurantId  String
  date          DateTime
  time          String
  customerName  String
  customerEmail String
  groupSize     Int
  status        String
  createdAt     DateTime @default(now()) @map("created_at")
  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
}

model User {
  id           String      @id @default(uuid())
  name         String
  email        String      @unique
  passwordHash String      @map("password_hash")
  createdAt    DateTime    @default(now()) @map("created_at")
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
}